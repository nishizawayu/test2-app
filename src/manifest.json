{
    "name": "Sample",
    "version": "1.0.0",
    "manifest_version": 3,
    "description": "Alert when specific text is clicked",
    "action": { "default_popup": "public/index.html" },
    "background": {
      "service_worker": "background.js" 
    },
    "permissions": ["activeTab"],
    "content_scripts": [{
      "matches": ["<all_urls>"],
      "js": [
        "content.js"
      ]
    }]
  }